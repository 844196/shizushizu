{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer",
                "minimum": 1
            },
            "name": {
                "type": "string",
                "minLength": 1
            },
            "at": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[0-2][0-9]:[0-5][0-9]$"
            },
            "frequency": {
                "type": "integer",
                "minimum": 0,
                "maximum": 60
            },
            "speech_text": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[^ ]+"
            }
        },
        "required": ["id", "name", "at", "frequency", "speech_text"],
        "additionalProperties": false
    },
    "additionalItems": false
}
